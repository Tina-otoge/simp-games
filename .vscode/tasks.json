{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CMS",
            "type": "shell",
            "command": "./scripts/launch.sh",
            "options": {
                "cwd": "${workspaceFolder}/cms"
            },
        },
        {
            "label": "Rebuild CMS",
            "type": "shell",
            "command": "./scripts/rebuild.sh",
            "options": {
                "cwd": "${workspaceFolder}/cms"
            },
        },
        {
            "label": "Build and watch front",
            "type": "shell",
            "command": "./scripts/watch.sh",
            "options": {
                "cwd": "${workspaceFolder}/front"
            },
        }
    ]
}